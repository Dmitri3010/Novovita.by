@model Novovita.by.Models.EmailMessage

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header" style="background: #84bb29; color: white;">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="
    color: white;
">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="exampleModalLabel">Новое сообщение</h4>
            </div>
            <div class="modal-body">
                <form asp-action="Contacts" asp-controller="Home">
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Ваш телефон *</label>
                        <input asp-for="Phone" type="text" class="form-control" id="recipient-name" required >
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Ваш e-mail</label>
                        <input asp-for="Email" type="email" class="form-control" id="recipient-name" required>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">Сообщение:</label>
                        <textarea asp-for="Message" class="form-control" id="message-text"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success btn-block btn-lg" style=" background: #84bb29;">
                            Отправить сообщение
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>