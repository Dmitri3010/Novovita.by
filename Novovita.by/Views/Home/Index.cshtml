            <div class="blog">
                <div class="container">
                    <div class="section-header text-center">
                        <h2 class="f2 c1">Новости и статьи</h2>
                        <h1 class="f1 fw-7 c4">Последние новости и обновления</h1>
                    </div>
                    <div class="blog-post owl-carousel">

                        @foreach (var blog in news)
                        {
                            <div class="col-md-4">
                                <div class="blog-card" style="min-height:300px;">
                                    <div class="blog-text" style="background: url(images/news/@blog.Image);background-size: cover;">
